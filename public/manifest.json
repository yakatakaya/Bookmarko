{
    "name": "Bookmarko",
    "description": "Bookmark manager",
    "version": "1.0",
    "manifest_version": 3,
    "homepage_url": "https://github.com/yakatakaya/Bookmarko",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "tabs",
      "bookmarks",
      "storage",
      "contextMenus"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "bookmark_128.png"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "icons": {
      "16": "bookmark_16.png",
      "64": "bookmark_64.png",
      "128": "bookmark_128.png"
    }
  }